@* ToDo的单个显示组件 *@
<div class="todo-item-row">
    <div Class="is-finished" @onclick="TodoFinishClicked">
        @if (ToDoItemDto.IsFinished)
        {
            <Icon Type="check-square" Theme="outline"/>
        }
        else
        {
            <Icon Type="border" Theme="outline"/>
        }
    </div>
    <div Class="description" @onclick="TodoItemClicked">
        @ToDoItemDto.Title
    </div>
    <div Class="is-important" @onclick="TodoImportantClicked">
        @if (ToDoItemDto.IsImportant)
        {
            <Icon Type="star" Theme="fill"/>
        }
        else
        {
            <Icon Type="star" Theme="outline"/>
        }
    </div>
</div>

<style>
    .todo-item-row {
        background-color: #fCfCfC;  /* 每个todo item 的背景颜色 */
    
        min-height: 53px;
        line-height: 40px;
        
        display: flex;
        text-align: center;
        justify-content: center;
        align-items: center;
        
        border-radius: 10px; 
        border-bottom: 1px solid #d3d3d3;
        margin-top: 5px;
    }
    
    .todo-item-row:hover {
        background-color: #f5f5f5;
    }
    
    .is-finished {
        margin-left: 12px;
    }
    
    .description {
        margin: 0 12px;
        
        width: 100%;
        text-align: start;
    }
    
    .is-important {
        margin-left: auto;
        margin-right: 12px;
    }
</style>