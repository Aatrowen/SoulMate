@* ToDo的单个显示组件 *@
<Space Class="todo-item-row">
    <SpaceItem Class="is-finished">
        @if (ToDoItemDto.IsFinished)
        {
            <Icon Type="check-square" Theme="outline"/>
        }
        else
        {
            <Icon Type="border" Theme="outline"/>
        }
    </SpaceItem>
    <SpaceItem Class="description">
        @ToDoItemDto.Title
    </SpaceItem>
    <SpaceItem Class="is-important">
        @if (ToDoItemDto.IsImportant)
        {
            <Icon Type="star" Theme="fill"/>
        }
        else
        {
            <Icon Type="star" Theme="outline"/>
        }
    </SpaceItem>
</Space>

<style>
    .todo-item-row {
        background-color: #fCfCfC;  /* 每个todo item 的背景颜色 */
    
        min-height: 53px;
        line-height: 40px;
        
        display: flex;
        
        border-radius: 10px; 
        border-bottom: 1px solid #d3d3d3;
        margin-top: 5px;
    }
    
    .todo-item-row:hover {
        background-color: #f5f5f5;
    }
    
    .is-finished {
        margin-left: 12px;
    }
    
    .is-important {
        margin-left: auto;
        margin-right: 12px;
    }
</style>